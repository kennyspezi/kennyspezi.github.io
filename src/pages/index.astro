<style>
  .home-page {
    min-height: 100vh;
  }

  .hero-splash {
    position: relative;
    min-height: calc(100vh - 120px);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(26, 0, 51, 0.7) 0%,
      rgba(26, 0, 51, 0.9) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 2rem;
    max-width: 800px;
    animation: fadeInUp 1s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 700;
    color: var(--pink-accent);
    margin: 0 0 1rem 0;
    text-shadow: 0 4px 12px rgba(255, 159, 255, 0.5);
  }

  .hero-subtitle {
    font-size: clamp(1rem, 3vw, 1.5rem);
    color: var(--cyan-accent);
    margin: 0 0 2rem 0;
    font-weight: 400;
  }

  .hero-welcome {
    background: rgba(46, 0, 62, 0.8);
    border: 2px solid var(--primary-purple);
    border-radius: 12px;
    padding: 1.5rem 2rem;
    margin: 2rem 0;
    backdrop-filter: blur(10px);
  }

  .hero-welcome p {
    color: var(--text-light);
    font-size: 1.1rem;
    line-height: 1.6;
    margin: 0;
  }

  .hero-socials {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-top: 2rem;
  }

  .hero-socials a {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--darkest-purple);
    border: 2px solid var(--primary-purple);
    border-radius: 50%;
    color: var(--cyan-accent);
    font-size: 1.8rem;
    transition: all 0.3s ease;
  }

  .hero-socials a:hover {
    transform: scale(1.15);
    border-color: var(--pink-accent);
    background: var(--primary-purple);
    color: var(--pink-accent);
    box-shadow: 0 8px 24px rgba(255, 159, 255, 0.4);
  }

  /* Preview Sections */
  .preview-sections {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 1rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .preview-section {
    background: var(--darkest-purple);
    border: 2px solid var(--primary-purple);
    border-radius: 16px;
    padding: 3rem;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .preview-section:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(255, 159, 255, 0.2);
  }

  .preview-content {
    position: relative;
    z-index: 1;
  }

  .preview-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .preview-section h2 {
    color: var(--pink-accent);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin: 0 0 1rem 0;
    font-weight: 700;
  }

  .preview-section p {
    color: var(--text-light);
    font-size: 1.1rem;
    line-height: 1.8;
    margin: 1rem 0;
  }

  /* Buttons */
  .explore-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: var(--primary-purple);
    border: 2px solid var(--pink-accent);
    border-radius: 8px;
    color: var(--pink-accent);
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    margin-top: 1.5rem;
    text-transform: lowercase;
  }

  .explore-button:hover {
    background: var(--pink-accent);
    color: var(--darker-purple);
    transform: translateX(4px);
    box-shadow: 0 4px 16px rgba(255, 159, 255, 0.4);
  }

  .explore-button.secondary {
    background: var(--dark-purple);
    border-color: var(--cyan-accent);
    color: var(--cyan-accent);
  }

  .explore-button.secondary:hover {
    background: var(--cyan-accent);
    color: var(--darker-purple);
  }

  .button-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
  }

  /* Featured Project */
  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--dark-purple);
    border: 1px solid var(--primary-purple);
    border-radius: 20px;
    color: var(--cyan-accent);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    font-weight: 600;
  }

  .featured-repo {
    margin-top: 1rem;
  }

  .repo-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .active-badge {
    padding: 0.4rem 0.8rem;
    background: rgba(0, 255, 127, 0.1);
    border: 1px solid rgba(0, 255, 127, 0.3);
    border-radius: 20px;
    color: #00ff7f;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .repo-stats {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--text-muted);
    font-size: 0.95rem;
  }

  .stat i {
    color: var(--cyan-accent);
  }

  /* Social Platforms */
  .social-platforms {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
  }

  .platform {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--dark-purple);
    border: 1px solid var(--primary-purple);
    border-radius: 8px;
    color: var(--cyan-accent);
    font-size: 0.9rem;
  }

  .platform i {
    font-size: 1.2rem;
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 1rem;
    }

    .hero-welcome {
      padding: 1rem 1.5rem;
    }

    .hero-socials a {
      width: 50px;
      height: 50px;
      font-size: 1.5rem;
    }

    .preview-sections {
      padding: 2rem 1rem;
      gap: 2rem;
    }

    .preview-section {
      padding: 2rem 1.5rem;
    }

    .button-group {
      flex-direction: column;
    }

    .explore-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>

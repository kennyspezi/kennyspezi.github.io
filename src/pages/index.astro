---
import '../styles/global.css'
import Layout from "../layouts/Layout.astro"
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import MusicPlayer from '../components/MusicPlayer.astro'
import Organizations from '../components/Organizations.astro'
import Stickers from '../components/Stickers.astro'

// Fetch GitHub activity to highlight active/recent repo
const username = 'kennyspezi';
let featuredRepo = null;

try {
  const eventsResponse = await fetch(`https://api.github.com/users/${username}/events/public?per_page=10`);
  if (eventsResponse.ok) {
    const events = await eventsResponse.json();
    
    // Find the most recent push or activity event
    const relevantEvent = events.find(e => 
      e.type === 'PushEvent' || 
      e.type === 'CreateEvent' || 
      e.type === 'PullRequestEvent'
    );
    
    if (relevantEvent) {
      const repoName = relevantEvent.repo.name.split('/')[1];
      const repoResponse = await fetch(`https://api.github.com/repos/${relevantEvent.repo.name}`);
      if (repoResponse.ok) {
        featuredRepo = await repoResponse.json();
      }
    }
  }
} catch (e) {
  console.error('Failed to fetch featured repo:', e);
}
---

<Layout>
  <Header />
  
  <main class="home-page">
    <Stickers page="home" />
    
    <!-- Hero Splash Section -->
    <section class="hero-splash">
      <div class="hero-background">
        <img src="/assets/gif/my-gif.gif" alt="background" />
        <div class="hero-overlay"></div>
      </div>
      
      <div class="hero-content">
        <h1 class="hero-title gradient-text">kenny madrigal</h1>
        <p class="hero-subtitle">electrical engineer in progress | laredo‚Äìhouston, tx</p>
        
        <div class="hero-welcome">
          <p>
            hi! i'm kenny, and i'm making sense of myself by diving into my curiousities and projects :) 
            welcome to my very unpolished website;;
          </p>
        </div>

        <div class="hero-socials social-container">
          <a href="mailto:kennyspezi@proton.me" class="social-icon social-icon-lg" aria-label="Email" title="Email">
            <i class="ri-mail-line"></i>
          </a>
          <a href="https://github.com/kennyspezi" class="social-icon social-icon-lg" target="_blank" rel="noopener noreferrer" aria-label="GitHub" title="GitHub">
            <i class="ri-github-fill"></i>
          </a>
          <a href="https://instagram.com/kentrolysis" class="social-icon social-icon-lg" target="_blank" rel="noopener noreferrer" aria-label="Instagram" title="Instagram">
            <i class="ri-instagram-line"></i>
          </a>
          <a href="https://www.linkedin.com/in/karla-kenny-madrigal" class="social-icon social-icon-lg" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" title="LinkedIn">
            <i class="ri-linkedin-box-fill"></i>
          </a>
          <a href="https://www.youtube.com/@kennyspezi" class="social-icon social-icon-lg" target="_blank" rel="noopener noreferrer" aria-label="YouTube" title="YouTube">
            <i class="ri-youtube-fill"></i>
          </a>
        </div>
      </div>
    </section>

    <!-- Music Player Banner -->
    <MusicPlayer />

    <!-- Preview Sections -->
    <div class="preview-sections">
      <!-- 1. About Me Preview -->
      <section class="preview-section about-preview tilted-card">
        <div class="preview-content">
          <div class="preview-icon animate-wiggle">üêØ</div>
          <h2>about me</h2>
          <p>
            I'm a second-year electrical engineering student at UH. I'm interested in analog, power, 
            and microwave electronics, but ultimately I'm a hobbyist working my way up!
          </p>
          <a href="/about/" class="explore-button btn-primary">
            <span>get to know me</span>
            <i class="ri-arrow-right-line"></i>
          </a>
        </div>
      </section>

      <!-- 2. Featured Project / Arts & Crafts Preview -->
      <section class="preview-section project-preview tilted-card-reverse">
        <div class="section-badge">
          <i class="ri-github-fill"></i>
          <span>currently working on</span>
        </div>
        <div class="preview-content">
          {featuredRepo ? (
            <div class="featured-repo">
              <div class="repo-header">
                <h2>{featuredRepo.name}</h2>
                <span class="active-badge">üü¢ active</span>
              </div>
              <p>{featuredRepo.description || 'A project in active development'}</p>
              <div class="repo-stats">
                <span class="stat">
                  <i class="ri-star-fill"></i>
                  {featuredRepo.stargazers_count}
                </span>
                {featuredRepo.language && (
                  <span class="stat">
                    <i class="ri-code-line"></i>
                    {featuredRepo.language}
                  </span>
                )}
                <span class="stat">
                  <i class="ri-git-commit-line"></i>
                  updated recently
                </span>
              </div>
              <div class="btn-group">
                <a href={featuredRepo.html_url} target="_blank" rel="noopener noreferrer" class="explore-button btn-primary btn-secondary">
                  <span>view on github</span>
                  <i class="ri-external-link-line"></i>
                </a>
                <a href="/arts-n-crafts/" class="explore-button btn-primary">
                  <span>explore arts-n-crafts</span>
                  <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>
          ) : (
            <div class="featured-repo">
              <h2>check out my projects</h2>
              <p>Explore my collection of personal projects, essays, and organizational work.</p>
              <a href="/arts-n-crafts/" class="explore-button btn-primary">
                <span>explore arts-n-crafts</span>
                <i class="ri-arrow-right-line"></i>
              </a>
            </div>
          )}
        </div>
      </section>

      <!-- 3. Organizations Preview -->
      <section class="preview-section orgs-preview tilted-card">
        <Organizations title="organizations i'm part of" />
      </section>

      <!-- 4. Nyan Cat -->
      <section class="preview-section nyan-preview">
        <img src="/assets/gif/nyan-cat.gif" alt="nyan cat" class="nyan-cat" />
      </section>

      <!-- 5. Second Gif -->
      <section class="preview-section gif-preview">
        <img src="/assets/gif/my-gif.gif" alt="animated gif" class="gif-image" />
      </section>
    </div>
  </main>

  <Footer />
</Layout>

<script>
fo  import { initScrollReveal } from '../lib/scrollReveal';
  
  // Initialize scroll reveal for bento box sections
  initScrollReveal('.preview-section', {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px',
    once: false
  });
</script>

<style>
  .home-page {
    min-height: 100vh;
  }

  .hero-splash {
    position: relative;
    min-height: calc(100vh - 120px);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(26, 0, 51, 0.7) 0%,
      rgba(26, 0, 51, 0.9) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 2rem;
    max-width: 800px;
  }

  @media (prefers-reduced-motion: no-preference) {
    .hero-content {
      animation: fadeInUp 1s ease-out;
    }
  }

  .hero-title {
    font-size: clamp(1.05rem, 6vw, 2.1rem);
    font-weight: 700;
    color: var(--pink-accent);
    margin: 0 0 0.45rem 0;
    text-shadow: 0 4px 12px rgba(255, 159, 255, 0.5);
  }

  /* Gradient text animation */
  .gradient-text {
    background: linear-gradient(
      90deg,
      var(--pink-accent),
      var(--cyan-accent),
      var(--pink-accent)
    );
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @media (prefers-reduced-motion: no-preference) {
    .gradient-text {
      animation: gradientShift 4s ease infinite;
    }
  }

  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% center;
    }
    50% {
      background-position: 100% center;
    }
  }

  .hero-subtitle {
    font-size: clamp(0.525rem, 2.5vw, 0.675rem);
    color: var(--cyan-accent);
    margin: 0 0 0.9rem 0;
    font-weight: 400;
  }

  .hero-welcome {
    background: rgba(46, 0, 62, 0.8);
    border: 2px solid var(--primary-purple);
    border-radius: 12px;
    padding: 0.75rem 0.9rem;
    margin: 0.9rem 0;
    backdrop-filter: blur(10px);
  }

  .hero-welcome p {
    color: var(--text-light);
    font-size: 0.87rem;
    line-height: 1.6;
    margin: 0;
    line-height: 1.6;
    margin: 0;
  }

  .hero-socials {
    gap: 1rem;
  }

  .hero-socials a {
    background: var(--darkest-purple);
  }

  .hero-socials a:hover {
    transform: scale(1.15);
  }

  @media (prefers-reduced-motion: no-preference) {
    .hero-socials a:nth-child(1) { animation: fadeInUp 0.6s ease-out 0.2s both; }
    .hero-socials a:nth-child(2) { animation: fadeInUp 0.6s ease-out 0.3s both; }
    .hero-socials a:nth-child(3) { animation: fadeInUp 0.6s ease-out 0.4s both; }
    .hero-socials a:nth-child(4) { animation: fadeInUp 0.6s ease-out 0.5s both; }
    .hero-socials a:nth-child(5) { animation: fadeInUp 0.6s ease-out 0.6s both; }
  }

  /* Preview Sections */
  .preview-sections {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    padding: 1.8rem 0.6rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  @media (min-width: 968px) {
    .preview-sections {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: minmax(130px, 0.9fr) minmax(180px, 1.1fr) minmax(150px, 0.8fr);
      gap: 1.2rem;
      min-height: calc(100vh - 240px);
      max-height: none;
    }

    .about-preview {
      grid-column: 2 / 4;
      grid-row: 1;
      min-height: 0;
      overflow-y: auto;
    }

    .project-preview {
      grid-column: 3;
      grid-row: 2;
      min-height: 0;
      overflow-y: auto;
    }

    .orgs-preview {
      grid-column: 1 / 3;
      grid-row: 2 / 4;
      overflow-y: auto;
      min-height: 0;
    }

    .nyan-preview {
      grid-column: 1;
      grid-row: 1;
      min-height: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--darkest-purple);
      border: 2px solid var(--primary-purple);
      border-radius: 12px;
      padding: 0;
      overflow: hidden;
    }

    .nyan-cat {
      width: 100%;
      height: 100%;
      object-fit: cover;
      image-rendering: pixelated;
    }

    .gif-preview {
      grid-column: 3;
      grid-row: 3;
      min-height: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--darkest-purple);
      border: 2px solid var(--primary-purple);
      border-radius: 12px;
      padding: 0;
      overflow: hidden;
    }

    .gif-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    .preview-section {
      opacity: 0.05;
      transform: translateY(60px) scale(0.95);
      filter: blur(10px);
      transition: opacity 0.8s ease-out, transform 0.8s ease-out, filter 0.8s ease-out;
    }

    .preview-section.revealed {
      opacity: 1;
      transform: translateY(0) scale(1);
      filter: blur(0);
    }

    .about-preview.revealed {
      transition-delay: 0.2s;
    }

    .project-preview.revealed {
      transition-delay: 0.4s;
    }

    .orgs-preview.revealed {
      transition-delay: 0.3s;
    }

    .nyan-preview.revealed {
      transition-delay: 0.1s;
    }

    .gif-preview.revealed {
      transition-delay: 0.5s;
    }
  }

  /* Preview sections extend card-base with custom padding */
  .preview-section {
    background: var(--darkest-purple);
    border: 2px solid var(--primary-purple);
    border-radius: 12px;
    padding: 0.9rem;
    position: relative;
    overflow: hidden;
    transform-origin: center center;
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
  }

  .preview-section::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(
      45deg,
      var(--pink-accent),
      var(--cyan-accent),
      var(--pink-accent)
    );
    background-size: 200% 200%;
    border-radius: 16px;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  @media (prefers-reduced-motion: no-preference) {
    .preview-section::before {
      animation: gradientRotate 3s ease infinite;
    }
  }

  .preview-section:hover::before {
    opacity: 0.3;
  }

  @keyframes gradientRotate {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .preview-section:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 40px rgba(255, 159, 255, 0.3);
  }

  .preview-content {
    position: relative;
    z-index: 1;
  }

  .preview-icon {
    font-size: 1.35rem;
    margin-bottom: 0.45rem;
    display: inline-block;
  }

  .preview-section h2 {
    color: var(--pink-accent);
    font-size: clamp(0.825rem, 3.5vw, 1.125rem);
    margin: 0 0 0.45rem 0;
    font-weight: 700;
    position: relative;
    display: inline-block;
  }

  @media (prefers-reduced-motion: no-preference) {
    .preview-section h2::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: -5px;
      width: 0;
      height: 3px;
      background: linear-gradient(to right, var(--pink-accent), var(--cyan-accent));
      border-radius: 2px;
      transition: width 0.4s ease;
    }

    .preview-section:hover h2::after {
      width: 100%;
    }
  }

  .preview-section p {
    color: var(--text-light);
    font-size: 0.75rem;
    line-height: 1.7;
    margin: 0.45rem 0;
  }

  /* Buttons use btn-primary/btn-secondary from shared styles */
  .explore-button {
    margin-top: 0.6rem;
    text-transform: lowercase;
    padding: 0.45rem 0.9rem;
    font-size: 0.54rem;
  }

  /* Featured Project */
  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.24rem 0.51rem;
    background: var(--dark-purple);
    border: 1px solid var(--primary-purple);
    border-radius: 20px;
    color: var(--cyan-accent);
    font-size: 0.48rem;
    margin-bottom: 0.6rem;
    font-weight: 600;
  }

  .featured-repo {
    margin-top: 0.6rem;
  }

  .repo-header {
    display: flex;
    align-items: center;
    gap: 0.45rem;
    flex-wrap: wrap;
    margin-bottom: 0.45rem;
  }

  .active-badge {
    padding: 0.18rem 0.39rem;
    background: rgba(0, 255, 127, 0.1);
    border: 1px solid rgba(0, 255, 127, 0.3);
    border-radius: 20px;
    color: #00ff7f;
    font-size: 0.45rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
  }

  @media (prefers-reduced-motion: no-preference) {
    .active-badge::before {
      content: '';
      display: inline-block;
      width: 6px;
      height: 6px;
      background: #00ff7f;
      border-radius: 50%;
      animation: pulse 2s ease-in-out infinite;
    }
  }

  .repo-stats {
    display: flex;
    gap: 0.6rem;
    flex-wrap: wrap;
    margin-top: 0.45rem;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 0.21rem;
    color: var(--text-muted);
    font-size: 0.51rem;
  }

  .stat i {
    color: var(--cyan-accent);
  }

  /* Social Platforms */
  .social-platforms {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
  }

  .platform {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--dark-purple);
    border: 1px solid var(--primary-purple);
    border-radius: 8px;
    color: var(--cyan-accent);
    font-size: 0.9rem;
  }

  .platform i {
    font-size: 1.2rem;
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 1rem;
    }

    .hero-welcome {
      padding: 1rem 1.5rem;
    }

    .hero-socials a {
      width: 50px;
      height: 50px;
      font-size: 1.5rem;
    }

    .preview-sections {
      padding: 2rem 1rem;
      gap: 2rem;
    }

    .preview-section {
      padding: 2rem 1.5rem;
    }

    .button-group {
      flex-direction: column;
    }

    .explore-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>

---
import '../styles/global.css'
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageNav from '../components/PageNav.astro';
import GitHubProjects from '../components/GitHubProjects.astro';
import ForkedProjects from '../components/ForkedProjects.astro';
import Essays from '../components/Essays.astro';
import Organizations from '../components/Organizations.astro';
import Stickers from '../components/Stickers.astro';
---

<Layout>
  <Header />
  
  <main class="arts-page">
    <Stickers page="arts" />
    
    <div class="page-header page-header-tilted">
      <h1>ðŸ§° arts-n-crafts ðŸ”§</h1>
      <p>projects, essays, and organizations that keep me busy</p>
    </div>

    <section class="section-divider">
      <h2 class="section-title">ðŸš€ personal projects</h2>
      <GitHubProjects />
      <h3 class="section-title">forked projects</h3>
      <ForkedProjects />
    </section>
    <section class="section-divider">
      <Organizations class="two-column">
        <div class="org-body-text">
          <p>
            As Vice President and Former Technical Chair of IEEE at the University of Houston, I organize technical workshops,
            "circuit speed dating" socials, launch new projects, and provide technical advice to my fellow UH students.</p>
            <p> ForkTheCity is an open-source project seeking to address the problems that modern citizens, volunteers, grass-roots orgs, and civic workers face:
            bureaucracy and lack of coordination and visibility. I'm recruiting people that can make this tool have an impact.
          </p>
        </div>
      </Organizations>
    </section>

    <section class="section-divider">
      <Essays />
    </section>

    <PageNav prevPage={{ name: 'about', path: '/about/' }} />
  </main>
  <Footer />
</Layout>

<style>
  .arts-page {
    min-height: 100vh;
    padding: 2rem 1rem;
  }

  .org-body-text {
    margin-top: 0;
    text-align: left;
  }

  :global(.organizations-section.two-column) {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  :global(.organizations-section.two-column .organizations-title) {
    grid-column: 2;
    margin-bottom: 1.5rem;
    justify-content: flex-start;
  }

  :global(.organizations-section.two-column .organizations-grid) {
    grid-column: 1;
    grid-row: 1 / 3;
  }

  :global(.organizations-section.two-column .org-body-text) {
    grid-column: 2;
  }

  @media (max-width: 968px) {
    :global(.organizations-section.two-column) {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    :global(.organizations-section.two-column .organizations-grid),
    :global(.organizations-section.two-column .org-body-text) {
      grid-column: 1;
    }

    .org-body-text {
      margin-top: 2rem;
    }
  }

  .org-body-text p {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }

  @media (max-width: 768px) {
    .section-divider {
      margin: 3rem 0;
    }
  }
</style>

---
const username = 'kennyspezi';
const excludeRepo = 'kennyspezi.github.io';

type RepoResponse = {
  name: string;
  fork: boolean;
  updated_at: string;
  default_branch: string;
  html_url: string;
  description: string | null;
  stargazers_count: number;
  language: string | null;
};

type CommitResponse = {
  sha: string;
  commit: {
    message: string;
    author: {
      date: string;
    };
  };
};

type RepoCommitSummary = {
  message: string;
  date: string;
  sha: string;
};

type RepoWithExtras = RepoResponse & {
  previewImage: string;
  commits: RepoCommitSummary[];
};

let repos: RepoWithExtras[] = [];
let error: string | null = null;
let isLoaded = false;

// Function to check for preview image in repo
async function getPreviewImage(repoName: string, defaultBranch: string) {
  const extensions = ['png', 'jpg', 'jpeg', 'gif'];
  
  for (const ext of extensions) {
    try {
      const url = `https://raw.githubusercontent.com/${username}/${repoName}/${defaultBranch}/preview.${ext}`;
      const response = await fetch(url, { method: 'HEAD' });
      if (response.ok) {
        return url;
      }
    } catch (e) {
      // Continue to next extension
    }
  }
  
  return '/assets/gif/nyan-cat.gif';
}

// Function to get recent commits
async function getRecentCommits(repoName: string) {
  try {
    const response = await fetch(`https://api.github.com/repos/${username}/${repoName}/commits?per_page=3`);
    if (response.ok) {
      const commits: CommitResponse[] = await response.json();
      return commits.map((commit) => ({
        message: commit.commit.message.split('\n')[0], // First line only
        date: new Date(commit.commit.author.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }),
        sha: commit.sha.substring(0, 7)
      }));
    }
  } catch (e) {
    console.error(`Failed to fetch commits for ${repoName}:`, e);
  }
  return [];
}

try {
  const response = await fetch(`https://api.github.com/users/${username}/repos?sort=updated&per_page=100`);
  if (!response.ok) {
    error = `GitHub API error: ${response.status}`;
  } else {
    const allRepos: RepoResponse[] = await response.json();
    const filteredRepos = allRepos
      .filter((repo) => repo.name !== excludeRepo && !repo.fork)
      .sort((a, b) => new Date(b.updated_at).getTime() - new Date(a.updated_at).getTime());
    
    // Fetch preview images for each repo
    repos = await Promise.all(
      filteredRepos.map(async (repo): Promise<RepoWithExtras> => ({
        ...repo,
        previewImage: await getPreviewImage(repo.name, repo.default_branch),
        commits: await getRecentCommits(repo.name)
      }))
    );
  }
} catch (e) {
  error = 'Failed to load projects';
  console.error('GitHub API error:', e);
} finally {
  isLoaded = true;
}
---

<section class="github-projects">
  <div class="projects-grid">
    {repos.length > 0 ? (
      repos.map((repo) => (
        <a href={repo.html_url} target="_blank" rel="noopener noreferrer" class="project-card">
          <div class="project-image">
            <img src={repo.previewImage} alt={repo.name} />
          </div>
          <div class="project-content">
            <h3>{repo.name}</h3>
            <p>{repo.description || 'No description available'}</p>
            <div class="project-meta">
              <span class="stars">‚≠ê {repo.stargazers_count}</span>
              {repo.language && <span class="language">{repo.language}</span>}
            </div>
          </div>
          {repo.commits && repo.commits.length > 0 && (
            <div class="commits-tooltip">
              <div class="tooltip-header">Recent Commits</div>
              {repo.commits.map((commit) => (
                <div class="commit-item">
                  <span class="commit-sha">{commit.sha}</span>
                  <span class="commit-message">{commit.message}</span>
                  <span class="commit-date">{commit.date}</span>
                </div>
              ))}
            </div>
          )}
        </a>
      ))
    ) : error ? (
      <p class="error">{error}</p>
    ) : !isLoaded ? (
      <p class="loading">Loading projects...</p>
    ) : (
      <p class="loading">No projects found.</p>
    )}
  </div>
</section>

<style>
  .github-projects {
    padding: 2rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .project-card {
    background: var(--darkest-purple);
    border: 2px solid var(--primary-purple);
    border-radius: 12px;
    overflow: visible;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: block;
    color: inherit;
    position: relative;
  }

  .project-card > *:not(.commits-tooltip) {
    overflow: hidden;
    border-radius: 12px;
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(255, 159, 255, 0.3);
    border-color: var(--pink-accent);
  }

  .project-card:hover .commits-tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .project-image {
    width: 100%;
    height: 180px;
    overflow: hidden;
    background: var(--dark-purple);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-content {
    padding: 1.5rem;
  }

  .project-content h3 {
    margin: 0 0 0.5rem 0;
    color: var(--cyan-accent);
    font-size: 1.25rem;
    font-weight: 600;
  }

  .project-content p {
    margin: 0 0 1rem 0;
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .project-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .stars {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .language {
    padding: 0.25rem 0.5rem;
    background: var(--primary-purple);
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .commits-tooltip {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-10px);
    background: var(--dark-purple);
    border: 2px solid var(--pink-accent);
    border-radius: 8px;
    padding: 1rem;
    min-width: 300px;
    max-width: 400px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, transform 0.3s ease;
    z-index: 10;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
    margin-bottom: 10px;
    pointer-events: none;
  }

  .tooltip-header {
    font-weight: 600;
    color: var(--pink-accent);
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .commit-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--primary-purple);
  }

  .commit-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .commit-sha {
    font-family: monospace;
    color: var(--cyan-accent);
    font-size: 0.75rem;
    font-weight: 600;
  }

  .commit-message {
    color: var(--text-primary);
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .commit-date {
    color: var(--text-muted);
    font-size: 0.75rem;
  }

  .error, .loading {
    grid-column: 1 / -1;
    text-align: center;
    padding: 2rem;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .commits-tooltip {
      min-width: 250px;
      max-width: 90vw;
    }
  }
</style>

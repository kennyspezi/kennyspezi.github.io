---
const username = 'kennyspezi';
const excludeRepo = 'kennyspezi.github.io';

let repos = [];
let error = null;

try {
  const response = await fetch(`https://api.github.com/users/${username}/repos?sort=updated&per_page=100`);
  if (response.ok) {
    const allRepos = await response.json();
    repos = allRepos
      .filter(repo => repo.name !== excludeRepo && !repo.fork)
      .sort((a, b) => new Date(b.updated_at).getTime() - new Date(a.updated_at).getTime());
  }
} catch (e) {
  error = 'Failed to load projects';
  console.error('GitHub API error:', e);
}
---

<section class="github-projects">
  <div class="projects-grid">
    {repos.length > 0 ? (
      repos.map(repo => (
        <a href={repo.html_url} target="_blank" rel="noopener noreferrer" class="project-card">
          <div class="project-image">
            {repo.homepage && repo.homepage.includes('imgur') ? (
              <img src={repo.homepage} alt={repo.name} />
            ) : (
              <img src="/assets/gif/nyan-cat.gif" alt="nyan cat" />
            )}
          </div>
          <div class="project-content">
            <h3>{repo.name}</h3>
            <p>{repo.description || 'No description available'}</p>
            <div class="project-meta">
              <span class="stars">‚≠ê {repo.stargazers_count}</span>
              {repo.language && <span class="language">{repo.language}</span>}
            </div>
          </div>
        </a>
      ))
    ) : error ? (
      <p class="error">{error}</p>
    ) : (
      <p class="loading">Loading projects...</p>
    )}
  </div>
</section>

<style>
  .github-projects {
    padding: 2rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .project-card {
    background: var(--darkest-purple);
    border: 2px solid var(--primary-purple);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: block;
    color: inherit;
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(255, 159, 255, 0.3);
    border-color: var(--pink-accent);
  }

  .project-image {
    width: 100%;
    height: 180px;
    overflow: hidden;
    background: var(--dark-purple);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-content {
    padding: 1.5rem;
  }

  .project-content h3 {
    margin: 0 0 0.5rem 0;
    color: var(--cyan-accent);
    font-size: 1.25rem;
    font-weight: 600;
  }

  .project-content p {
    margin: 0 0 1rem 0;
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .project-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .stars {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .language {
    padding: 0.25rem 0.5rem;
    background: var(--primary-purple);
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .error, .loading {
    grid-column: 1 / -1;
    text-align: center;
    padding: 2rem;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

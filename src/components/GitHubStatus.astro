---
import type { GitHubEvent } from '../lib/github';

const username = 'kennyspezi';

type Status = {
  activity: string;
  timeAgo: string;
  link: string;
  isActive: boolean;
};

let status: Status | null = null;
let error: string | null = null;

try {
  // Fetch user's recent activity from GitHub Events API
  const response = await fetch(`https://api.github.com/users/${username}/events/public?per_page=20`);
  if (!response.ok) {
    error = `GitHub API error: ${response.status}`;
  } else {
    const events: GitHubEvent[] = await response.json();
    
    // Find the most recent push event
    const pushEvent = events.find((e) => e.type === 'PushEvent');
    
    if (pushEvent) {
      const eventDate = new Date(pushEvent.created_at);
      const now = new Date();
      const diffHours = Math.floor((now.getTime() - eventDate.getTime()) / (1000 * 60 * 60));
      
      // Determine if actively coding (within last 24 hours)
      const isActive = diffHours < 24;
      
      status = {
        activity: `Pushed to ${pushEvent.repo.name.split('/')[1]}`,
        timeAgo: diffHours < 1 ? 'Just now' : diffHours < 24 ? `${diffHours}h ago` : `${Math.floor(diffHours / 24)}d ago`,
        link: `https://github.com/${pushEvent.repo.name}`,
        isActive
      };
    }
  }
} catch (e) {
  error = 'Unable to fetch status';
  console.error('GitHub status error:', e);
}
---

<aside class="status-widget">
  <h3>ðŸš€ github status</h3>
  {status ? (
    <div class="status-content">
      <div class="status-indicator">
        <span class={status.isActive ? "pulse active" : "pulse inactive"}></span>
        <span class="status-label">{status.isActive ? 'Active' : 'Last Activity'}</span>
      </div>
      <a href={status.link} target="_blank" rel="noopener noreferrer" class="status-activity">
        {status.activity}
      </a>
      <span class="status-time">{status.timeAgo}</span>
    </div>
  ) : error ? (
    <p class="status-error">{error}</p>
  ) : (
    <p class="status-idle">Currently offline</p>
  )}
</aside>

<style>
  .status-widget {
    background: var(--darkest-purple);
    border: 2px solid var(--primary-purple);
    border-radius: 12px;
    padding: 1.5rem;
    margin: 2rem 0;
  }

  .status-widget h3 {
    margin: 0 0 1rem 0;
    color: var(--pink-accent);
    font-size: 1.1rem;
    font-weight: 600;
  }

  .status-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .pulse {
    width: 10px;
    height: 10px;
    background: var(--cyan-accent);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  .pulse.inactive {
    background: var(--text-muted);
    opacity: 0.5;
    animation: none;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.1);
    }
  }

  .status-label {
    color: var(--cyan-accent);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .status-activity {
    color: var(--text-light);
    font-size: 0.95rem;
    padding: 0.5rem;
    background: var(--dark-purple);
    border-radius: 6px;
    transition: background 0.3s ease;
  }

  .status-activity:hover {
    background: var(--primary-purple);
    color: var(--pink-accent);
  }

  .status-time {
    color: var(--text-muted);
    font-size: 0.85rem;
  }

  .status-error, .status-idle {
    color: var(--text-muted);
    font-style: italic;
    margin: 0;
  }
</style>

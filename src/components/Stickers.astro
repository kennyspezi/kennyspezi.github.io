---
// Import stickers
import pinkStar from '../assets/pink-star.svg';
import redStar from '../assets/red-star.svg';
import blueStarCard from '../assets/blue-star-card.svg';
import ideaIcon from '../assets/idea.svg';
import logoStar from '../assets/logo-star.svg';

const { page = 'default' } = Astro.props;
---

<!-- Decorative stickers -->
{page === 'about' && (
  <>
    <img src={pinkStar.src} alt="" class="sticker sticker-1" />
    <img src={redStar.src} alt="" class="sticker sticker-2" />
    <img src={blueStarCard.src} alt="" class="sticker sticker-3" />
    <img src={ideaIcon.src} alt="" class="sticker sticker-4" />
    <img src={logoStar.src} alt="" class="sticker sticker-5" />
    <img src={pinkStar.src} alt="" class="sticker sticker-6" />
  </>
)}

{page === 'home' && (
  <>
    <img src={pinkStar.src} alt="" class="sticker sticker-1" />
    <img src={redStar.src} alt="" class="sticker sticker-2" />
    <img src={ideaIcon.src} alt="" class="sticker sticker-3" />
    <img src={blueStarCard.src} alt="" class="sticker sticker-4" />
    <img src={logoStar.src} alt="" class="sticker sticker-5" />
    <img src={pinkStar.src} alt="" class="sticker sticker-6" />
  </>
)}

{page === 'arts' && (
  <>
    <img src={pinkStar.src} alt="" class="sticker sticker-1" />
    <img src={redStar.src} alt="" class="sticker sticker-2" />
    <img src={blueStarCard.src} alt="" class="sticker sticker-3" />
    <img src={ideaIcon.src} alt="" class="sticker sticker-4" />
    <img src={logoStar.src} alt="" class="sticker sticker-5" />
    <img src={pinkStar.src} alt="" class="sticker sticker-6" />
    <img src={redStar.src} alt="" class="sticker sticker-7" />
  </>
)}

<style is:global>
  /* Playful sticker decorations */
  .sticker {
    position: absolute;
    pointer-events: none;
    z-index: 1;
    animation: float 6s ease-in-out infinite;
  }

  .sticker-1 {
    top: 10%;
    left: 5%;
    width: 75px;
    transform: rotate(-15deg);
  }

  .sticker-2 {
    top: 30%;
    right: 8%;
    width: 68px;
    transform: rotate(20deg);
    animation-delay: -2s;
  }

  .sticker-3 {
    top: 50%;
    left: 10%;
    width: 95px;
    transform: rotate(10deg);
    animation-delay: -4s;
  }

  .sticker-4 {
    top: 70%;
    right: 6%;
    width: 88px;
    transform: rotate(-10deg);
    animation-delay: -3s;
  }

  .sticker-5 {
    bottom: 15%;
    left: 8%;
    width: 80px;
    transform: rotate(15deg);
    animation-delay: -1s;
  }

  .sticker-6 {
    bottom: 35%;
    right: 12%;
    width: 70px;
    transform: rotate(-18deg);
    animation-delay: -5s;
  }

  .sticker-7 {
    top: 85%;
    right: 15%;
    width: 65px;
    transform: rotate(12deg);
    animation-delay: -2.5s;
  }

  @keyframes float {
    0%, 100% { 
      transform: translateY(0) rotate(var(--rotate, 0deg)); 
    }
    50% { 
      transform: translateY(-15px) rotate(var(--rotate, 0deg)); 
    }
  }

  @media (max-width: 768px) {
    .sticker {
      width: 45px !important;
    }
  }
</style>

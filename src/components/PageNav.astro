---
interface Props {
  prevPage?: { name: string; path: string };
  nextPage?: { name: string; path: string };
}

const { prevPage, nextPage } = Astro.props;
---

<nav class="page-nav">
  <div class="page-nav-container">
    {prevPage && (
      <a href={prevPage.path} class="page-nav-button prev-button">
        <i class="ri-arrow-left-line"></i>
        <span>back to {prevPage.name}</span>
      </a>
    )}
    {!prevPage && <div></div>}
    
    {nextPage && (
      <a href={nextPage.path} class="page-nav-button next-button">
        <span>next: {nextPage.name}</span>
        <i class="ri-arrow-right-line"></i>
      </a>
    )}
  </div>
</nav>

<style>
  .page-nav {
    width: 100%;
    padding: 2rem 1rem;
    margin-top: 3rem;
  }

  .page-nav-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .page-nav-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--darkest-purple);
    border: 2px solid var(--primary-purple);
    border-radius: 12px;
    color: var(--cyan-accent);
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: lowercase;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .page-nav-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      var(--pink-accent),
      var(--cyan-accent)
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .page-nav-button:hover {
    color: var(--darkest-purple);
    border-color: var(--pink-accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 159, 255, 0.3);
  }

  .page-nav-button:hover::before {
    opacity: 1;
  }

  .page-nav-button i {
    font-size: 1.2rem;
  }

  @media (max-width: 640px) {
    .page-nav-container {
      flex-direction: column;
      gap: 0.75rem;
    }

    .page-nav-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>

    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-content {
    padding: 0.75rem;
  }

  .project-content h3 {
    margin: 0 0 0.35rem 0;
    color: var(--cyan-accent);
    font-size: 0.9rem;
    font-weight: 600;
  }

  .fork-label {
    margin: 0 0 0.5rem 0;
    color: var(--text-muted);
    font-size: 0.7rem;
    font-style: italic;
  }

  .project-meta {
    display: flex;
    gap: 0.6rem;
    font-size: 0.7rem;
    color: var(--text-muted);
  }


    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
    margin-bottom: 10px;
    pointer-events: none;
  }

  .tooltip-header {
    font-weight: 600;
    color: var(--pink-accent);
    margin-bottom: 0.75rem;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .commit-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--primary-purple);
  }

  .commit-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .commit-sha {
    font-family: monospace;
    color: var(--cyan-accent);
    font-size: 0.7rem;
    font-weight: 600;
  }

  .commit-message {
    color: var(--text-primary);
    font-size: 0.8rem;
    line-height: 1.4;
  }

  .commit-date {
    color: var(--text-muted);
    font-size: 0.7rem;
  }

  .error, .loading {
    grid-column: 1 / -1;
    text-align: center;
    padding: 2rem;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
      gap: 1rem;
    }

    .commits-tooltip {
      min-width: 220px;
      max-width: 85vw;
    }
  }
</style>

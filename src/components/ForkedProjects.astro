---
const username = 'kennyspezi';

let repos = [];
let error = null;

// Function to check for preview image in repo
async function getPreviewImage(repoName: string, ownerName: string, defaultBranch: string) {
  const extensions = ['png', 'jpg', 'jpeg', 'gif'];
  
  for (const ext of extensions) {
    try {
      const url = `https://raw.githubusercontent.com/${ownerName}/${repoName}/${defaultBranch}/preview.${ext}`;
      const response = await fetch(url, { method: 'HEAD' });
      if (response.ok) {
        return url;
      }
    } catch (e) {
      // Continue to next extension
    }
  }
  
  return '/assets/gif/nyan-cat.gif';
}

// Function to get recent commits
async function getRecentCommits(repoName: string, ownerName: string) {
  try {
    const response = await fetch(`https://api.github.com/repos/${ownerName}/${repoName}/commits?per_page=3&author=${username}`);
    if (response.ok) {
      const commits = await response.json();
      return commits.map(commit => ({
        message: commit.commit.message.split('\n')[0], // First line only
        date: new Date(commit.commit.author.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }),
        sha: commit.sha.substring(0, 7)
      }));
    }
  } catch (e) {
    console.error(`Failed to fetch commits for ${repoName}:`, e);
  }
  return [];
}

try {
  const response = await fetch(`https://api.github.com/users/${username}/repos?sort=updated&per_page=100`);
  if (response.ok) {
    const allRepos = await response.json();
    const forkedRepos = allRepos
      .filter(repo => repo.fork)
      .sort((a, b) => new Date(b.updated_at).getTime() - new Date(a.updated_at).getTime());
    
    // Fetch full details for each forked repo to get parent info
    repos = await Promise.all(
      forkedRepos.map(async (repo) => {
        // Fetch full repo details to get parent
        let parentOwner = repo.owner.login;
        try {
          const detailResponse = await fetch(`https://api.github.com/repos/${username}/${repo.name}`);
          if (detailResponse.ok) {
            const fullRepo = await detailResponse.json();
            parentOwner = fullRepo.parent?.owner?.login || fullRepo.source?.owner?.login || repo.owner.login;
          }
        } catch (e) {
          console.error(`Failed to fetch details for ${repo.name}:`, e);
        }
        
        return {
          ...repo,
          parentOwner,
          previewImage: await getPreviewImage(repo.name, parentOwner, repo.default_branch),
          commits: await getRecentCommits(repo.name, parentOwner)
        };
      })
    );
  }
} catch (e) {
  error = 'Failed to load forked projects';
  console.error('GitHub API error:', e);
}
---

<section class="forked-projects">
  <div class="projects-grid">
    {repos.length > 0 ? (
      repos.map(repo => (
        <a href={repo.html_url} target="_blank" rel="noopener noreferrer" class="project-card">
          <div class="project-image">
            <img src={repo.previewImage} alt={repo.name} />
          </div>
          <div class="project-content">
            <h3>{repo.name}</h3>
            <p class="fork-label">üç¥ fork from {repo.parentOwner}</p>
            <div class="project-meta">
              <span class="stars">‚≠ê {repo.stargazers_count}</span>
              {repo.language && <span class="language">{repo.language}</span>}
            </div>
          </div>
          {repo.commits && repo.commits.length > 0 && (
            <div class="commits-tooltip">
              <div class="tooltip-header">My Recent Commits</div>
              {repo.commits.map(commit => (
                <div class="commit-item">
                  <span class="commit-sha">{commit.sha}</span>
                  <span class="commit-message">{commit.message}</span>
                  <span class="commit-date">{commit.date}</span>
                </div>
              ))}
            </div>
          )}
        </a>
      ))
    ) : error ? (
      <p class="error">{error}</p>
    ) : (
      <p class="loading">Loading forked projects...</p>
    )}
  </div>
</section>

<style>

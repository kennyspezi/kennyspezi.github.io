    align-items: center;
    text-align: center;
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    color: inherit;
  }

  .org-card:hover {
    transform: translateY(-8px);
    border-color: var(--pink-accent);
    box-shadow: 0 12px 24px rgba(255, 159, 255, 0.3);
  }

  .org-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .org-card h3 {
    color: var(--cyan-accent);
    margin: 0 0 1rem 0;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .org-card p {
    color: var(--text-muted);
    margin: 0 0 1.5rem 0;
    font-size: 1rem;
    line-height: 1.6;
    flex-grow: 1;
  }

  .visit-link {
    color: var(--pink-accent);
    font-weight: 600;
    font-size: 1rem;
    transition: color 0.3s ease;
  }

  .org-card:hover .visit-link {
    color: var(--cyan-accent);
  }
</style>

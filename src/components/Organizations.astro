<style>
  .organizations-section {
    padding: 2rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .organizations-section h2 {
    color: var(--pink-accent);
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .organizations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .org-card {
    background: var(--darkest-purple);
    border: 2px solid var(--primary-purple);
    border-radius: 12px;
    padding: 2.5rem;
    display: flex;

---
const { title = "‚ô£Ô∏è organizations", class: className = "" } = Astro.props;

function parseTitle(rawTitle: string) {
  const trimmed = (rawTitle ?? "").trim();
  const firstSpace = trimmed.indexOf(" ");
  if (firstSpace === -1) return { icon: null as string | null, text: trimmed };

  const first = trimmed.slice(0, firstSpace);
  const rest = trimmed.slice(firstSpace + 1).trim();

  // Heuristic: if the first token has no alphanumerics, treat it as an icon/emoji.
  const hasAlphaNum = /[A-Za-z0-9]/.test(first);
  const isLikelyIcon = !hasAlphaNum && first.length <= 8 && rest.length > 0;

  return isLikelyIcon ? { icon: first, text: rest } : { icon: null, text: trimmed };
}

const parsedTitle = parseTitle(title);

const organizations = [
  {
    name: "IEEE@UH - Vice President",
    description: "Student chapter of the Institute of Electrical and Electronics Engineers at the University of Houston",
    link: "https://ieeeuh.org/",
    icon: "https://github.com/IEEE-UniversityOfHouston/media/blob/main/assets/ieeelogo.png?raw=true"
  },
  {
    name: "ForkTheCity - Founder",
    description: "Open-source civic infrastruture platform for local communities to organize impactful initiatives.",
    link: "https://github.com/ForkTheCity/",
    icon: "ü¶∫"
  }
];
---

<section class={`organizations-section ${className}`}>
  <h2 class="organizations-title">
    {parsedTitle.icon && (
      <span class="organizations-title-icon" aria-hidden="true">{parsedTitle.icon}</span>
    )}
    <span class="organizations-title-text">{parsedTitle.text}</span>
  </h2>
  <div class="organizations-grid">
    {organizations.map((org, index) => (
      <a href={org.link} target="_blank" rel="noopener noreferrer" class={`org-card ${index % 2 === 0 ? 'tilted-card' : 'tilted-card-reverse'}`}>
        <div class="org-icon">
          {org.icon.startsWith('http') ? (
            <img src={org.icon} alt={`${org.name} logo`} class="org-logo" />
          ) : (
            org.icon
          )}
        </div>
        <h3>{org.name}</h3>
        <p>{org.description}</p>
        <span class="visit-link">visit ‚Üí</span>
      </a>
    ))}
  </div>
  <slot />
</section>

<style>
  .organizations-section {
    padding: 1rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .organizations-title {
    color: var(--pink-accent);
    font-size: clamp(0.825rem, 3.5vw, 1.125rem);
    margin: 0 0 2rem 0;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .organizations-title-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }

  .organizations-title-text {
    line-height: 1.1;
  }

  .organizations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .org-card {
    background: var(--darkest-purple);
    border: 2px solid var(--primary-purple);
    border-radius: 12px;
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    color: inherit;
  }

  .org-card:hover {
    transform: translateY(-8px);
    border-color: var(--pink-accent);
    box-shadow: 0 12px 24px rgba(255, 159, 255, 0.3);
  }

  .org-icon {
    font-size: 3rem;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .org-logo {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 16px;
  }

  .org-card h3 {
    color: var(--cyan-accent);
    margin: 0 0 0.75rem 0;
    font-size: 1.2rem;
    font-weight: 600;
  }

  .org-card p {
    color: var(--text-muted);
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
    line-height: 1.5;
    flex-grow: 1;
  }

  .visit-link {
    color: var(--pink-accent);
    font-weight: 600;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .org-card:hover .visit-link {
    color: var(--cyan-accent);
  }

  /* Tilted polaroid-style cards */
  .tilted-card {
    transform: rotate(-1.5deg);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .tilted-card:hover {
    transform: rotate(0deg) translateY(-4px);
    box-shadow: 0 12px 32px rgba(255, 159, 255, 0.4);
  }

  .tilted-card-reverse {
    transform: rotate(1.5deg);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .tilted-card-reverse:hover {
    transform: rotate(0deg) translateY(-4px);
    box-shadow: 0 12px 32px rgba(255, 159, 255, 0.4);
  }
</style>
